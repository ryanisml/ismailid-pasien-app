<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Ubah Profile"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_cancel" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Nomor KTP (Tidak dapat diubah)" />

        <TextView
            android:id="@+id/tv_noktp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Nomor KTP"
            android:textSize="14dp"
            android:textColor="@color/grey_80"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Nama Pasien" />

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:hint="Nama Pasien"
            android:textSize="14dp"
            android:inputType="textPersonName"
            android:textColor="@color/grey_80"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Nomor Telepon (Tidak dapat diubah)" />

        <TextView
            android:id="@+id/tv_notelp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="No Telp"
            android:textSize="14dp"
            android:textColor="@color/grey_80"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Alamat" />

        <EditText
            android:id="@+id/et_alamat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:padding="10dp"
            android:hint="Alamat"
            android:gravity="top"
            android:textSize="14dp"
            android:imeOptions="actionDone"
            android:inputType="textPostalAddress"
            android:textColor="@color/grey_80"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Tanggal Lahir" />

        <LinearLayout
            android:id="@+id/lnr_tgl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Tanggal Lahir"
                android:padding="10dp"
                android:textSize="14dp"
                android:textColor="@color/grey_80"/>

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/grey_40" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_calendar_today" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_primary_pas"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>